@model BlogEntities.Dtos.CommentAddDto
<div class="card my-4">
    <h5 class="card-header">Bir yorum ekle:</h5>
    <div class="card-body form-card">
        <form asp-action="Add" asp-controller="Comment" method="post" id="form-comment-add">
            <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
            <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display:none;"></div>
            <input type="hidden" asp-for="ArticleId" />
            <div class="form-group">
                <label asp-for="CreatedByName"></label>
                <input type="text" asp-for="CreatedByName" class="form-control">
            </div>
            <div class="form-group">
                <textarea class="form-control" rows="3" asp-for="Text"></textarea>
            </div>
            <button type="button" class="btn btn-primary" id="btnSave">Gönder</button>
        </form>
    </div>
</div>
